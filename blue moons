        <script>
        
             var lessonData = [{
                "lesson": "1",
                "lessonDescription": "Begin your journey leaning to play bass or brush up on your skills. In this lesson you'll learn your way around the bass, learn some basic exercises, as well as the chromatic scale and tips on how to navigate the neck.",
                "chapters": [{
                	"chapterName": "Getting Started",
                	"chapterType": "header item"
                	},{
                	"chapterName": "Introduction",
                	"chapterType": "item",
                	"chapterMovieURL": "vault.blahblah.mp4",
                	"loopPoints": [{
                    	"title": "4x4 Exercise: 60 BPM",
                    	"in": "00:17:47.00",
                    	"out": "00:18:22.00"
                    	},{
                    	"title": "4x4 Exercise: 120 BPM",
                    	"in": "00:19:48.00",
                    	"out": "00:20:24.00"
                    	},{
                    	"title": "A String: 60 BPM",
                    	"in": "00:24:18.00",
                    	"out": "00:26:01.00"
                   	 	},{
                    	"title": "D String: 60 BPM",
                    	"in": "00:26:45.00",
                    	"out": "00:28:28.00"
                    	},{
                    	"title": "G String: 60 BPM",
                    	"in": "00:28:57.00",
                    	"out": "00:30:40.00"
                    	},{
                    	"title": "Notes Across the Neck",
                    	"in": "00:34:01.00",
                    	"out": "00:35:24.00"
                    	}]
                	},{
                	"chapterName": "Getting Started",
                	"chapterType": "item",
                	"chapterMovieURL": "vault.blahblah.mp4",
                	"loopPoints": [{}]
                }]}];
                
             window.onload = function() {
                
                // initial page animation 
                $(".ui.fluid.card").velocity("transition.flipBounceXIn", { stagger: 100 });
                $(".theHeader").velocity("transition.slideUpBigIn");
                
                };
             
              // when you click a chapters button in a lesson card 
              $('.attached.button').click(function() {
                // first, save which lesson:
                
                var currentLessonIndex = this.id - 1;
                
                // localStorage.setItem("currentLesson", this.id);
                
                // var currentLesson = (localStorage.getItem("currentLesson")) - 1 ;
                
                console.log(currentLessonIndex);
                
                // // then grab the correct chapter names
                var lengthOfChapters = lessonData[currentLessonIndex].chapters.length;
                console.log(lengthOfChapters);
                var currentChapterList = ''; 
                  for (i = 0; i < lengthOfChapters; i++) {
                    currentChapterList += '<div class="' + lessonData[currentLessonIndex].chapters[i].chapterType + '">' + lessonData[currentLessonIndex].chapters[i].chapterName + '</div>';
                    };
                console.log(currentChapterList);
                
                //and write them to the page
                document.getElementById("replaceMenu").innerHTML = '<div id="back" class="labeled icon header item"><i class="arrow left icon" style="float:left"></i>  Back</div><div class="header item"><h2>Chapters</h2></div>' + currentChapterList;
                

                // // then do the transition to the lesson:
                $(".ui.fluid.card").velocity("transition.shrinkOut", { stagger: 40 });
                $(".lessons").velocity({ opacity: 0 }, { display: "none" }); // disappears the lessons div
                $(".chapters").velocity("transition.slideUpIn");
              });
                
                $(".pointing div.item").click(function() {
                    var target = $( event.target );
                    console.log(target);
                   $(".item").removeClass("active");
                   target.addClass("active");
                });
                
                // back to lessons menu
                $('#back').click(function(){
                  console.log("HEYLO")
                    $(".chapters").velocity("transition.slideDownOut", {complete: function() { 
                    $(".lessons").velocity({ opacity: 1 }, { display: "block" });
                    $(".ui.fluid.card").velocity("transition.flipBounceXIn", { stagger: 60 });
                }});
                });
                
                
                
                
                
        </script>
